# cálculo de promedio semanal climatico de Zurich - Suiza y Guayaquil - Ecuador

def calcular_promedio(temperaturas):
    """calcula y retorna el promedio de una lista de temperaturas"""
    return sum(temperaturas) / len(temperaturas)

def mostrar_semana(lugar, temperaturas):
    """muestra las temperaturas diarias y el promedio semanal"""
    promedio = calcular_promedio(temperaturas)
    print(f"\nClima semanal en {lugar}")
    print("Temperaturas diarias (°C):")
    for i, temp in enumerate(temperaturas, 1):
        print(f"  Día {i}: {temp}°C")
    print(f"Promedio semanal: {promedio:.2f}°C")

def main():
    """función principal que ejecuta el programa"""
    print("Promedio semanal del clima\n")
    
    # son datos aproximados de la semana en diciembre
    zurich = [4, 3, 5, 2, 1, 3, 4]          # Zurich - Suiza
    guayaquil = [31, 30, 32, 29, 31, 30, 31]  # Guayaquil - Ecuador 
    
    mostrar_semana("Zurich, Suiza", zurich)
    mostrar_semana("Guayaquil, Ecuador", guayaquil)

if __name__ == "__main__":
    main()
